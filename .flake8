[flake8]
# Relax line length for this repo during Phase 0 bootstrap (pragmatic)
max-line-length = 120
extend-ignore = E203, W503

# For Phase 0 bootstrap, ignore line-length / newline issues in generated
# or scaffold files we created so CI focuses on functional contract files.
per-file-ignores =
    api/main.py: E501,W292
    engine/*.py: E501,W292,E302